{% import "macros.twig" as macros %}

{% if data.themeClass %}
    <div class='{{data.themeClass}}'>
{% endif %}

    {% if data.gridContainer %}
        <div class='{{data.gridContainer | default("grid-container")}}'>
    {% endif %}

            <div class='grid {% if data.centergrid %}grid--middle{% endif %}'>
                <div class='grid__item {{data.mediaRight | default("col-3-4")}}'>
                    <div class='block-{{data.blockSize | default("m")}} block--stacked {{data.isStacked}}'>
                        {{ macros.blocks(data.content) }}
                    </div><!--block ends-->
                </div><!--grid item ends-->
                <div class='grid__item {{data.mediaLeft | default("col-1-4")}}'>
                    <div class='block-{{data.blockSize | default("m")}} block--stacked {{data.isStacked}}'>
                       {{ macros.blocks(data.image) }}
                    </div><!--block ends-->
                </div><!-- grid item ends-->
            </div><!-- ends -->

    {% if data.gridContainer %}
        </div><!--grid container ends-->
    {% endif %}

{% if data.themeClass %}
    </div><!--theme ends-->
{% endif %}