{% import "macros.twig" as macros %}

{% if data.gridContainer %}
<div class='{{data.gridContainer}}'>
{% endif %}

    <div class='grid'>

    {% for key, chart in data.barchartData %}
        <div class='grid__item col-2-10 col--q-small'>
            <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>
                <p class='font-primary--light h1'>
                    {{ chart.percentage }}%
                </p>
            </div><!--block ends-->
        </div><!-- grid item ends-->
        
        <div class='grid__item col-8-10 col--q-small'>
            <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}} pt-0--q-small'>
                <p>
                    {{ chart.description }}
                </p>
                <div class='barchart col '>
                    <span class='meter block-element' style='height:100%;width: {{chart.percentage }}%'></span>
                </div>
            </div><!--block ends-->
        </div><!--grid item ends-->
    {% endfor %}

    </div>


{% if data.gridContainer %}
</div>
{% endif %}

    