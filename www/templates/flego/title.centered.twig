{#
    {{ macros.lego('content.title', { 
        'blockSize': 'm'
        'title': 'I am a title'
    }) }}
#}
<div class='grid'>

    <div class='grid__item col'>
        <div class='relative'>
            <h1 class='font-primary--light text-center'>
                <span class='block-{{data.blockSize}} block--stacked inline-block white-bg'>
                    {{ data.title }}
                </span>
            </h1>
            <hr class='absolute col z-index--push absolute--v-middle'/>
        </div><!--block ends-->
    </div><!-- grid item ends-->
</div><!-- ends -->
