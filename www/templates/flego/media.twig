{% import "macros.twig" as macros %}

{% if data.themeClass %}
    <div class='{{data.themeClass}}'>
{% endif %}

    {% if data.gridContainer %}
        <div class='{{data.gridContainer}}'>
    {% endif %}

            <div class='grid {{data.centergrid}}'>
                <div class='grid__item {{data.mediaRight}}'>
                    <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>
                        {{ macros.blocks(data.content) }}
                    </div><!--block ends-->
                </div><!--grid item ends-->
                <div class='grid__item {{data.mediaLeft}}'>
                    <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>
                       {{ macros.blocks(data.image) }}
                    </div><!--block ends-->
                </div><!-- grid item ends-->
            </div><!-- ends -->

    {% if data.gridContainer %}
        </div><!--grid container ends-->
    {% endif %}

{% if data.themeClass %}
    </div><!--theme ends-->
{% endif %}