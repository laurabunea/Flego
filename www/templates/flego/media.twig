{% import "macros.twig" as macros %}

{% if data.themeClass %}
    <div class='theme--{{data.themeClass}}'>
{% endif %}

    {% if data.gridContainer %}
        <div class='{{data.gridContainer | default("grid-container-xl")}}'>
    {% endif %}

            <div class='grid {% if data.gridMiddle %}grid--middle{% endif %}'>
                <div class='grid__item {{data.mediaLeft | default("col-1-4")}}'>
                    <div class='block-{{data.blockSizeLeft | default("m")}} block--stacked {{data.paddingOverrideLeft}}'>
                        {{ macros.blocks(data.mediaLeftData) }}
                    </div><!--block ends-->
                </div><!--grid item ends-->
                <div class='grid__item {{data.mediaRight | default("col-3-4")}}'>
                    <div class='block-{{data.blockSizeRight | default("m")}} block--stacked {{data.paddingOverrideRight}}'>
                       {{ macros.blocks(data.mediaRightData) }}   
                    </div><!--block ends-->
                </div><!-- grid item ends-->
            </div><!-- ends -->

    {% if data.gridContainer %}
        </div><!--grid container ends-->
    {% endif %}

{% if data.themeClass %}
    </div><!--theme ends-->
{% endif %}