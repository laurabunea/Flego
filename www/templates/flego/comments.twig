{% import "macros.twig" as macros %}

{% if data.gridContainer %}
<div class='{{data.gridContainer}}'>
{% endif %}

    {% if data.gridClass %}
    <div class='grid'>
    {% endif %}

    {% for key, comment in data.commentData %}

        <div class='grid__item {{data.colSize}}'>
            <div class='block-{{data.blockSize | default("m")}} block--stacked {{data.isStacked}}'>
                <div class='arrow--left block-xs {% if data.theme %}theme--{{data.theme}}{% endif %} {% if data.radius %}radius{% endif %}'>

                    {{ macros.blocks(comment) }}
            
                    <i class='arrow arrow-bottom '></i>
                </div>
                
                <p class='icon-text uppercase' href='#'>
                    <i class='i circle {{data.CommentImage}}'></i>
                    {{value.name}}
                </p>
            </div><!--block ends-->
        </div><!-- grid item ends-->

    {% endfor %}
    
    {% if data.gridClass %}
    </div><!-- grid ends-->
    {% endif %}

{% if data.gridContainer %}
</div><!-- grid container ends-->
{% endif %}