<div class='grid'>
    
    <div class='grid__item col'>
      <div class='block-{{data.blockSize}} block--stacked left'>
        <h1>
          <span class='visually-hidden'>
            <a href='/' class='clean-link'>{{data.companyName}},/a>
          </span>
          <img class='' src='' alt='Flego'/>
        </h1>
      </div>
      <ul class='nav right clean-link-list'>
        {% for key, page in data.navigation %}
          <li class='hidden--q-small'>
               <a href='{{page.anchor}}' class='block-m block--stacked inline-block {{data.isStacked}}'>
                   {{page.title}}
               </a> 
            </li>  
        {% endfor %}
        <li class='visible--q-small hidden--q-large hidden--q-medium hidden--q-large hidden--q-xlarge'>
          <a href='#anchor' class='block-m block--stacked inline-block'>
            <i class='i i-menu inline-block'></i>
          </a>
        </li>
      </ul>
      
    </div><!-- grid item ends-->

</div><!-- ends -->