<div class='grid '>  
    <div class='grid__item col'>
        <div class='block-{{data.blockSize}} primary--border mt-m ml-m mr-m mb-m radius '>

            <div class='grid '>
                <div class='grid__item col-3-4 col--q-small'>
                    <div class='mr-m'>
                        <h2 class='{{data.headingSize}}'>
                            {{ data.panel.title }}
                        </h2>
                        
                        <p>
                            {{ data.panel.desc }}
                        </p>
                    </div>
                </div>
                <div class='grid__item col-1-4 col--q-small align--bottom'>
                    
                    <a href='{{ data.btnLink }}' class='btn right col border-box mt-m--q-small'>
                        {{ data.panel.btnTitle }}
                    </a>
                    
                </div>
            </div>
        </div><!--block ends-->
    </div><!-- grid item ends-->
  
</div><!-- ends -->