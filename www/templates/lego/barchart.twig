<div class='grid grid--middle'>
    {% for key, value in data.barchart %}
        <div class='grid__item col-2-10 col--q-small'>
            <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>
               <p class='font-primary--light h1'>{{ value.percentage }}</p>
            </div><!--block ends-->
        </div><!-- grid item ends-->
        
        <div class='grid__item col-8-10 col--q-small'>
            <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}} pt-0--q-small'>
                <p>
                    {{ value.desc }}
                </p>
                <div class='barchart col '>
                    <span class="meter block-element" style="height:100%;width: {{ value.percentage }}"></span>
                </div>
            </div><!--block ends-->
        </div><!--grid item ends-->
   {% endfor %}
</div><!-- ends -->