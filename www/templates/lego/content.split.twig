
<div class='grid'>
    
    <div class='grid__item col-1-3'>
        <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>
            <h2 class='inline-block'>
                {{data.heading}}
            </h2>
        </div><!--block ends-->
    </div><!-- grid item ends-->
    
    
    <div class='grid__item col-2-3'>
        <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>
            <p>
                {{data.copy}}
            </p>
        </div><!--block ends-->
    </div><!--grid item ends-->
   
</div><!-- ends -->
