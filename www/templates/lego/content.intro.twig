{% import "macros.twig" as macros %}
<div class='grid'>
    
    <div class='grid__item col{{data.colSizeHeading}} '>
        <div class='block-{{data.blockSize}} block--stacked {{data.isStackedTop}}'>
            {{ macros.blocks(data.content) }}
        </div><!--block ends-->
    </div><!-- grid item ends-->
    
    {% if data.intro %}
        <div class='grid__item col '>
            <div class='block-{{data.blockSize}} block--stacked pt-0  {{data.isStackedBottom}}'>
                {{ macros.blocks(data.intro) }}
            </div><!--block ends-->
        </div><!--grid item ends-->
    {% endif %}
    
</div><!-- ends -->
