<div class='grid'>
    <div class='grid__item col-3-4 '>
        <div class='block-{{data.blockSize}} block--stacked {{data.isStackedTop}}'>
            <h1 class='font-primary--light'>
                
                {% if data.strapline %}
                    {{ data.strapline }}
                {% else %}
                    {{ data.title }}
                {% endif %}
            </h1>
        </div><!--block ends-->
    </div><!-- grid item ends-->
    
    {% if data.intro %}
        <div class='grid__item col '>
            <div class='block-{{data.blockSize}} block--stacked pt-0  {{data.isStackedBottom}}'>
                <p class='intro'>
                    {{ data.intro }}
                </p>
            </div><!--block ends-->
        </div><!--grid item ends-->
    {% endif %}
</div><!-- ends -->
