{% import "macros.twig" as macros %}

<div class='grid gallery {{data.centerGrid}}'>
    
    <!-- loop over gallery items -->  
    {% for item, value in data.content %}
        <div class='grid__item col{{data.colSize}} gallery--item'>
            <div class='block-{{data.blockSize}} block--stacked {{data.isStacked}}'>         
                
                {{ macros.blocks(value)}}

            </div><!--block ends-->
        </div><!--grid item ends-->
   {% endfor %}
   
</div><!-- grid ends -->
