{% extends "template.twig" %}

{% block content %}

    <!-- Introduction -->
    {{ macros.flego('section', {  
        'gridContainer':'grid-container-xl',
        'externalthemeClass':'tertiary',
        'textCenter': true,
        'content': data.fredsintro
    }) }}

    <!-- Fred content -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'primary',
        'mediaLeftData': data.fredimage,
        'mediaRightData': data.fredcontent
    }) }}
    
    <!-- Flego content -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'quaternary',
        'mediaLeft':'col-3-4',
        'mediaRight':'col-1-4',
        'mediaLeftData': data.flegocontent,
        'mediaRightData': data.flegoimage
    }) }}
    
    <!-- Freds closet -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'primary',
        'mediaLeftData': data.fredsclosetimage,
        'mediaRightData': data.fredsclosetcontent
    }) }}

{% endblock %}