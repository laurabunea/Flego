{% extends "template.twig" %}

{% block content %}

    <!-- Introduction -->
    {{ macros.flego('section', {  
        'gridContainer':'grid-container-xl',
        'externalthemeClass':'tertiary',
        'textCenter': true,
        'content': data.fredsintro
    }) }}

    <!-- Fred content -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'primary',
        'mediaLeftData': data.fredcontent,
        'mediaRightData': data.fredimage
    }) }}
    
    <!-- Flego content -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'quaternary',
        'mediaLeft':'col-3-4',
        'mediaRight':'col-1-4',
        'mediaLeftData': data.flegoimage,
        'mediaRightData': data.flegocontent
    }) }}
    
    <!-- Freds closet -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'primary',
        'mediaLeftData': data.fredsclosetcontent,
        'mediaRightData': data.fredsclosetimage
    }) }}

{% endblock %}