{% extends "template.twig" %}

{% block content %}

    <!--  Introduction -->
    {{ macros.flego('section', {  
        'gridContainer':'grid-container-xl',
        'externalThemeClass':'tertiary',
        'textCenter': true,
        'content': data.fredsintro
    }) }}

    <!-- Fred content -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'primary',
        'mediaLeftData': data.fredSection.image,
        'mediaRightData': data.fredSection.content
    }) }}
    
    <!-- Flego content -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'secondary',
        'mediaLeft':'col-3-4',
        'mediaRight':'col-1-4',
        'mediaLeftData': data.flegoSection.content,
        'mediaRightData': data.flegoSection.image
    }) }}
    
    <!-- Freds closet -->
    {{ macros.flego('media', {  
        'gridContainer':'grid-container-xl',
        'themeClass': 'primary',
        'mediaLeftData': data.fredsClosetSection.image,
        'mediaRightData': data.fredsClosetSection.content
    }) }}

{% endblock %}