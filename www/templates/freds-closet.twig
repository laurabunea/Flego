{% extends "template.twig" %}

{% block content %}
 
    <!-- Freds closet introduction -->
    {{ macros.flego('media', {
        'gridContainer': 'grid-container-xl', 
        'themeClass': 'secondary',
        'gridMiddle':'grid--middle',
        'mediaLeft':'col-2-3',
        'mediaRight':'col-1-3',
        'mediaLeftData': data.closetcontent, 
        'mediaRightData': data.closetimage
    }) }}

    <!-- Theme section -->
    {{ macros.lego('section-block', {
        'anchor': 'theme-colours',
        'themeClass': 'tertiary',
        'legoBlock':'swatch.theme',
        'contentData':data.themesSection, 
        'swatchData': data.themes
    }) }}
    
    <!-- spacing section -->
    {{ macros.lego('section-block', {
        'anchor': 'spacing-helpers',
        'themeClass': 'secondary',
        'legoBlock':'swatch.spacing',
        'contentData':data.spacingSection, 
        'swatchData': data.spacingUnits
    }) }}

    <!-- block section -->
    {{ macros.lego('section-block', {
        'anchor': 'block-helpers',
        'themeClass':'tertiary',
        'legoBlock':'swatch.block',
        'contentData':data.blocksSection, 
        'swatchData': data.blocks
    }) }}

    <!-- grid breakpoints section -->
    {{ macros.lego('section-block', {
        'anchor': 'grid-breakpoints',
        'themeClass':'primary',
        'legoBlock':'swatch.grid',
        'contentData':data.gridSection, 
        'swatchData': data.gridBreakpoints
    }) }}

    <!-- font size section -->
    <div class='theme--secondary' id='typography'>
        <div class='grid-container-xl pb-xxl' >
            
            {{ macros.flego('content-block', {
                'content': data.typographySection, 
            }) }}
            
            <div class='grid'>
                {{ macros.lego('section.typography', {
                    'content': data.typographyPrimary,
                    'fonts':data.fonts,
                    'type': 'primary'
                }) }}

                <div class='grid__item col'>
                    <hr class='mt-l mb-l'/>
                </div>
                
                {{ macros.lego('section.typography', {
                    'content': data.typographySecondary,
                    'fonts':data.fonts,
                    'type': 'secondary'
                }) }}
            
            </div><!--grid ends-->
        </div><!--grid container ends-->
    </div><!--theme ends-->
    
    <!-- heirarchy section -->
    {{ macros.lego('section-block', {
        'anchor': 'text-heirarchy',
        'themeClass':'tertiary',
        'legoBlock':'content-block',
        'contentData':data.heirarchySection, 
        'swatchData': data.typography,
        'externalThemeWrapper': 'theme--primary radius'
    }) }}
   
    <div id='flego-blocks' style='background-color:#EDEDED;' class='pb-xxxl'>
        <div class='grid-container-xl '> 

            {{ macros.flego('content-block', {
                'content': data.flegoSection, 
            }) }}

        </div>
        <div class='grid-container device-container' >

            {{ macros.lego('device-header', {
                'splitLeft':"Fred's awesome",
                'splitRight':'12:00am'
            }) }}
            
            {{ macros.flego('header', { 
              'companyName':"lauras awesome company",
              'logo': data.headerData.logo,
              'navigation': data.headerData.navigation,
              'themeClass': 'primary'
            }) }}
            
            {{ macros.flego('breadcrumbs', {
                'gridContainer': 'grid-container',
                'blockSize':'m',
                'themeClass':'primary',
                'isStacked':'pb-0',
                'content': data.breadcrumbsData, 
                'gridMiddle': true
            }) }}
            
            {{ macros.flego('content-block', { 
                'colSize':'col-3-4 col--q-small',
                'themeClass':'primary',
                'blockSize': 'm',
                'content': data.introCopyNS
            }) }}

            {{ macros.flego('media', {       
                'themeClass': 'quaternary',       
                'blockSize': 'm',                                          
                'mediaLeft':'col-1-4 col--q-small',     
                'mediaRight':'col-3-4 col--q-small',    
                'mediaLeftData': data.mediaBlock1NS.leftCopy,     
                'mediaRightData': data.mediaBlock1NS.rightCopy       
            })}}

            {{ macros.flego('media', {       
                'themeClass': 'primary',       
                'blockSize': 'm',                                          
                'mediaLeft':'col-3-4 col--q-small',     
                'mediaRight':'col-1-4 col--q-small',    
                'mediaLeftData': data.mediaBlock2NS.leftCopy,     
                'mediaRightData': data.mediaBlock2NS.rightCopy       
            })}}

            {{ macros.flego('swatch', {
                'colSize':'col-1-4',
                'blockSize': 'm',
                'themeClassTop' :'tertiary',
                'themeClassBottom': 'quaternary',
                'data':data.swatchData
            }) }}
           
            <div class='block-m block--stacked'>
                {{ macros.flego('panel', {
                    'blockSize': 'm', 
                    'close':true,
                    'radius':true,
                    'theme':'warning', 
                    'content':data.panel,
                    'buttonLabel':'Click me',
                    'buttonLink':'/clickme'
                }) }}
            </div>

        </div><!--grid container ends-->
    </div><!--theme ends-->

    <!--grid breakpoint helpers -->

{% endblock %}