{% extends "template.twig" %}

{% block content %}
 
    <!-- Freds closet introduction -->
    {{ macros.flego('media', {
        'gridContainer': 'grid-container-xl', 
        'themeClass': 'secondary',
        'gridMiddle':'grid--middle',
        'mediaLeft':'col-2-3',
        'mediaRight':'col-1-3',
        'mediaLeftData': data.closetimage, 
        'mediaRightData': data.closetcontent
    }) }}

    <!-- Theme section -->
    {{ macros.lego('section-block', {
        'anchor': 'theme-colours',
        'themeClass': 'tertiary',
        'legoBlock':'swatch.theme',
        'contentData':data.themesSection, 
        'swatchData': data.themes
    }) }}
    
    <!-- spacing section -->
    {{ macros.lego('section-block', {
        'anchor': 'spacing-helpers',
        'themeClass': 'secondary',
        'legoBlock':'swatch.spacing',
        'contentData':data.spacingSection, 
        'swatchData': data.spacingUnits
    }) }}

    <!-- block section -->
    {{ macros.lego('section-block', {
        'anchor': 'block-helpers',
        'themeClass':'tertiary',
        'legoBlock':'swatch.block',
        'contentData':data.blocksSection, 
        'swatchData': data.blocks
    }) }}

    <!-- grid section -->
    {#{{ macros.lego('section-block', {
        'anchor': 'block-helpers',
        'themeClass':'primary',
        'legoBlock':'swatch.block',
        'contentData':data.gridSection, 
        'swatchData': data.blocks
    }) }}#}
    <div class='theme--primary' id='grid-helpers'>
    <div class='grid-container-xl pb-xxl' >

        {{ macros.flego('content-block', {
            'content': data.gridSection, 
        }) }}
            
            {# what do people want to know is it merely how many break points there are? or do they want to see common patterns #}

           <div class='grid'>
                <div class='grid__item col-1-5 col-2-4--q-small col--q-xsmall'>
                    <div class='ml-xxs mr-xxs radius mb-m'>
                        <div class='theme--quaternary top--radius-s pink--q-xsmall' >
                            <p class='small uppercase text-center pt-s pb-s'>
                                col-q--xsmall
                            </p>
                        </div>
                        <div class='theme--secondary bottom--radius-s'>
                            <div class='block-m block--stacked text-center'>
                                <p>
                                    > 29ems 
                                </p>
                            </div>
                        </div> 
                    </div>
                </div><!--grid item ends-->
                <div class='grid__item col-1-5 col-2-4--q-small col--q-xsmall'>
                    <div class='ml-xxs mr-xxs radius mb-m'>
                        <div class='theme--quaternary top--radius-s pink--q-small' >
                            <p class='small uppercase text-center pt-s pb-s'>
                                col-q--small
                            </p>
                        </div>
                        <div class='theme--secondary bottom--radius-s'>
                            <div class='block-m block--stacked text-center'>
                                <p>
                                    30ems > 47.99ems 
                                </p>
                            </div>
                        </div> 
                    </div>
                </div><!--grid item ends-->
                <div class='grid__item col-1-5 col-2-4--q-small col--q-xsmall'>
                    <div class='ml-xxs mr-xxs radius mb-m'>
                        <div class='theme--quaternary top--radius-s pink--q-medium' >
                            <p class='small uppercase text-center pt-s pb-s'>
                                col-q--medium
                            </p>
                        </div>
                        <div class='theme--secondary bottom--radius-s'>
                            <div class='block-m block--stacked text-center'>
                                <p>
                                    48ems > 63.99em
                                </p>
                            </div>
                        </div> 
                    </div>
                </div><!--grid item ends-->
                <div class='grid__item col-1-5 col-2-4--q-small col--q-xsmall'>
                    <div class='ml-xxs mr-xxs radius mb-m'>
                        <div class='theme--quaternary top--radius-s pink--q-large'  >
                            <p class='small uppercase text-center pt-s pb-s'>
                                col-q--large
                            </p>
                        </div>
                        <div class='theme--secondary bottom--radius-s'>
                            <div class='block-m block--stacked text-center'>
                                <p>
                                    64ems > 74.99em
                                </p>
                            </div>
                        </div> 
                    </div>
                </div><!--grid item ends-->
                <div class='grid__item col-1-5 col-2-4--q-small col--q-xsmall'>
                    <div class='ml-xxs mr-xxs radius mb-m'>
                        <div class='theme--quaternary top--radius-s pink--q-xlarge'  >
                            <p class='small uppercase text-center pt-s pb-s'>
                                col-q--xlarge
                            </p>
                        </div>
                        <div class='theme--secondary bottom--radius-s'>
                            <div class='block-m block--stacked text-center'>
                                <p>
                                    < 75em 
                                </p>
                            </div>
                        </div> 
                    </div>
                </div><!--grid item ends-->
            </div>
            
        </div><!--grid container ends-->
    </div><!--theme ends-->

    <!-- font size section -->
    <div class='theme--secondary' id='typography'>
        <div class='grid-container-xl pb-xxl' >
            
            {{ macros.flego('content-block', {
                'content': data.typographySection, 
            }) }}
            
            <div class='grid'>
                {{ macros.lego('section.typography', {
                    'content': data.typographyPrimary,
                    'fonts':data.fonts,
                    'type': 'primary'
                }) }}

                <div class='grid__item col'>
                    <hr class='mt-l mb-l'/>
                </div>
                
                {{ macros.lego('section.typography', {
                    'content': data.typographySecondary,
                    'fonts':data.fonts,
                    'type': 'secondary'
                }) }}
            
            </div><!--grid ends-->
        </div><!--grid container ends-->
    </div><!--theme ends-->
    
    <!-- heirarchy section -->
    {{ macros.lego('section-block', {
        'anchor': 'text-heirarchy',
        'themeClass':'tertiary',
        'legoBlock':'content-block',
        'contentData':data.heirarchySection, 
        'swatchData': data.typography,
        'externalThemeWrapper': 'theme--primary radius'
    }) }}


   
    <div id='flego-blocks' style='background-color:#EDEDED;' class='pb-xxxl'>
        <div class='grid-container-xl '> 

            {{ macros.flego('content-block', {
                'content': data.flegoSection, 
            }) }}

        </div>
        <div class='grid-container device-container' >

            {{ macros.lego('device-header', {
                'splitLeft':"Fred's awesome",
                'splitRight':'12:00am'
            }) }}

            <h3 class='lego--heading'>media.twig </h3>  
            {{ macros.flego('media', {
                'themeClass': 'primary',
                'mediaLeftData': data.dummycontent,
                'mediaRightData': data.dummyimage
            }) }}

            <h3 class='lego--heading'>split.twig </h3>  
            {{ macros.flego('split', {
                'splitLeft': data.dummycontent.splitLeft,
                'data': data.dummycontent,
            }) }}
            
            <h3 class='lego--heading'>swatch.twig </h3>
            {{ macros.flego('swatch', {
                'swatchTop': data.swatchData,
                'swatchBottom': data.swatchData.swatchBottom,
            }) }}

            <h3 class='lego--heading'> panel.twig </h3>
            <div class='block-m block--stacked'>
                {{ macros.flego('panel', {
                    'blockSize': 'm', 
                    'close':true,
                    'radius':true,
                    'theme':'warning', 
                    'content':data.panel,
                    'buttonLabel':'Click me',
                    'buttonLink':'/clickme'
                }) }}
            </div>

        </div><!--grid container ends-->
    </div><!--theme ends-->

    <!--grid breakpoint helpers -->

{% endblock %}