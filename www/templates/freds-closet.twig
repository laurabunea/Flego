{% extends "template.twig" %}

{% block content %}
 
    {{ macros.lego('content.media.reversed', {
        'themeClass': 'theme--tertiary', 
        'gridContainer': 'grid-container--tb-xl', 
        'content': data.closetcontent, 
        'image': data.closetimage, 
        'centergrid':'grid--middle',
        'blockSize': 'm',
        'mediaLeft':'col-1-3 col--q-small',
        'mediaRight':'col-2-3 col--q-small'
    }) }}

    {{ macros.lego('content.media', {
        'themeClass': 'theme--secondary', 
        'gridContainer': 'grid-container--tb-xl', 
        'content': data.closet2content, 
        'image': data.closet2image, 
        'centergrid':'grid--middle',
        'blockSize': 'm',
        'mediaLeft':'col-1-4 col--q-small',
        'mediaRight':'col-3-4  col--q-small'
    }) }}

    {{ macros.lego('content.media.reversed', {
        'themeClass': 'theme--secondary', 
        'gridContainer': 'grid-container--tb-xl', 
        'content': data.closet3content, 
        'image': data.closet3image, 
        'centergrid':'grid--middle',
        'blockSize': 'm',
        'mediaLeft':'col-1-4 col--q-small',
        'mediaRight':'col-3-4 col--q-small'
    }) }} 


    <div class='theme--tertiary'>
        <div class='grid-container--tb-xl'>
            
            {{ macros.lego('content.intro', {
                'content': data.themesSection, 
            }) }}

            <div class='grid'>
                
                {% for theme in data.themes %}
                    {{ macros.lego('swatch.theme', {
                        'theme': theme
                    }) }}  
                {% endfor %}

                <!--specify the extra grid item divs you need-->
                <div class='grid__item col-1-4 col-2-4--q-small '>
                </div><!--grid item ends-->

            </div><!--grid ends-->
        </div><!--grid container ends-->
    </div><!--theme ends-->


    <div class='theme--secondary'>
        <div class='grid-container--tb-xl' >
            
            {{ macros.lego('content.intro', {
                'content': data.spacingSection, 
            }) }}

            <div class='grid'>
            
                {% for unit in data.spacingUnits %}
                    
                    {{ macros.lego('swatch.spacing', {
                        'spacing': unit
                    }) }}  
                   
                {% endfor %}
                    
            </div><!--grid ends-->
        </div><!--grid container ends-->
    </div><!--theme ends-->


    <div class='theme--tertiary'>
        <div class='grid-container--tb-xl' >
            
            {{ macros.lego('content.intro', {
                'content': data.blocksSection, 
            }) }}

            <div class='grid'>
                
                {% for blocks in data.blocks %}
                    {{ macros.lego('swatch.block', {
                        'block': blocks
                    }) }}  
                {% endfor %}
                   
            </div><!--grid ends-->
        </div><!--grid container ends-->
    </div><!--theme tertiary ends-->

    <div class='theme--secondary'>
        <div class='grid-container--tb-xl' >
            
            <div class='grid'>
                <div class='grid__item col'>
                    <div class='block-m block--stacked'>
                        <h2 class='text-center font-primary--light'>
                            Typography
                        </h2>
                    </div>
                </div>
                <div class='grid__item col-2-4 col--q-small'>
                    <div class='block-m block--stacked'>
                         <p class='small uppercase'>Font primary:</p>
                        <h3>
                            SourceSansPro
                        </h3>
                        <p>
                            Awww Wicked! Howsit goin, this carked it misses is as kiwi as as a cool scarfie. Mean while, in South Pacific, the Armed Offenders Squad and Rhys Darby were up to no good with a bunch of paru chocolate fishs.
                        </p>
                    </div>
                </div>
                <div class='grid__item col-2-4 col--q-small'>
                    <div class='grid'>
                        
                        {% for font in data.fonts %}
                            {{ macros.lego('swatch.font', {
                                'font': font,
                                'type': 'primary'
                            }) }}  
                        {% endfor %} 

                    </div><!--grid  ends-->
                </div><!--grid item ends-->

                <div class='grid__item col'>
                    <hr class='mt-m mb-m'/>
                </div>

                <div class='grid__item col-2-4 col--q-small'>
                    <div class='block-m block--stacked'>
                        <p class='small uppercase'>Font secondary:</p>
                        <h3 class='font-secondary--bold'>
                           SourceSansPro
                        </h3>
                        <p class='font-secondary'>
                            The stoked force of his skiving off was on par with Manus Morissette's flat stick quater-acre patch. Put the jug on will you bro, all these buzzy vivids can wait till later. 
                        </p>
                    </div>
                </div>

                <div class='grid__item col-2-4 col--q-small'>
                    <div class='grid'>
                        {% for font in data.fonts %}
                            {{ macros.lego('swatch.font', {
                                'font': font,
                                'type': 'secondary'
                            }) }}  
                        {% endfor %} 
                    </div><!--grid  ends-->
                </div><!--grid item ends-->
            </div><!--grid ends-->
        </div><!--grid container ends-->
    </div><!--theme ends-->

    <div class='theme--tertiary'>
        <div class='grid-container--tb-xl'>
            {{ macros.lego('content.intro', {
                'content': data.heirarchySection, 
            }) }}
            
            <div class='theme--primary radius'>
                {{ macros.lego('content.block', {
                    'content': data.typography,
                    'blockSize': 'm'
                }) }}
            </div><!--theme ends-->
        </div><!--grid container ends-->
    </div><!--theme ends-->


{% endblock %}