{% extends "template.twig" %}

{% block content %}
    
    {{ macros.lego('content.media.reversed.quarters', {
        'themeClass': 'theme--secondary',
        'content': data.flegoContent,
        'image': data.flegoImage
    }) }}
  
<div class='block-m'>
    <div class='device-container'>
    
        <p class='grey-gradient split small append append--q-small append--q-medium' data-append="computer" data-append-medium="tablet" data-append-small="iphone" >
            &nbsp;&nbsp;&#63743; Laura's awesome 
            <span class='split__right uppercase '>
                12:00am &nbsp;&nbsp;
            </span>
        </p>

        {{ macros.lego('codeblock', {
            'title':'panel.twig',
            'anchor':'panel-code',
            'codeView':data.panelView.code,
            'renderedView':data.panelView.rendered
        }) }}

        {{ macros.lego('codeblock', {
            'title':'media.twig',
            'anchor':'media-block-code',
            'codeView':data.mediaView.code,
            'renderedView':data.mediaView.rendered
        }) }}

        {{ macros.lego('codeblock', {
            'title':'tile.centered.twig',
            'anchor':'title-center-code',
            'codeView':data.tileCenterView.code,
            'renderedView':data.tileCenterView.rendered
        }) }}

        {{ macros.lego('codeblock', {
            'title':'comments.twig',
            'anchor':'comments-code',
            'codeView':data.commentsView.code,
            'renderedView':data.commentsView.rendered
        }) }}
 
        {{ macros.lego('codeblock', {
            'title':'bar-chart.twig',
            'anchor':'bar-chart-code',
            'codeView':data.barchartView.code,
            'renderedView':data.barchartView.rendered
        }) }}


         <h3 class='lego--heading split on-hover' data-showhide-trigger='title-center-code'>
            title.centered.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0'>
                    <div class='showhide-hidden' data-showhide-container='title-center-code'>
                    
    <pre class='language-markup'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('title.centered', &lcub;
        'blockSize': 's',           &lt;!-- Controls content padding eg xxxs, xxs, xs, s ..--&gt;
        'title': 'I am a title'     &lt;!--comment--&gt;
    &rcub;) &rcub;&rcub;
    </code>
    </pre>
                    </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='block-m block--stacked'>
                    {{ macros.flego('title.centered', { 
                        'blockSize': 's',
                        'title': 'I am a title'
                    }) }}
                </div>
            </div><!--grid item ends-->
            
        </div><!-- grid ends -->

        <h3 class='lego--heading split on-hover' data-showhide-trigger='progresstile-code'>
            Progress.tile.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0 pb-0'>
                    <div class='showhide-hidden' data-showhide-container='progresstile-code'>
    <pre class='language-markup showhide-active'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('media', {
        'contentData': data.progressTile, 
        'colSize':'col-1-3',
        'percentage':'65.5',
        'theme':'quaternary',
        'blockSize': 'm'
        }) 
    &rcub;&rcub;
    </code>
    </pre>
                    </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='block-m block--stacked '>
                    {{ macros.flego('progress.tile', {
                        'contentData': data.progressTile, 
                        'colSize':'col-1-3',
                        'percentage':'65.5',
                        'theme':'quaternary',
                        'blockSize': 'm'
                    }) }}
                </div>
            </div><!--grid item ends-->
        </div><!-- grid ends -->

    {#******************************************************** 
                           Forms
    ********************************************************#}


        <h3 class='lego--heading split on-hover' data-showhide-trigger='forms-code'>
            forms.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0'>
                    
                    <div class='showhide-hidden' data-showhide-container='forms-code'>
                    
    <pre class='language-markup'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('form', &lcub;
        'commentData':comment, 
            'colSize':'col-2-4 col--q-small',
            'blockSize': 'm',         &lt;!--Controls content padding eg xxxs, xxs, xs, s ..--&gt;
            'formData':form
    &rcub;) &rcub;&rcub;
    </code>
    </pre>
                </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='mb-m'>
                    <form class='grid'>
                        {% for key, form in data.formData %}
                            {{ macros.flego('form', {
                                'colSize':'col-2-4 col--q-small',
                                'blockSize': 'm',
                                'formData':form
                            }) }}
                        {% endfor %}
                    </form>
                </div>
            </div><!--grid item ends-->
        </div><!-- grid ends -->





    {#******************************************************** 
                           Gallery list
    ********************************************************#}

        <h3 class='lego--heading split on-hover' data-showhide-trigger='gallery-list-codee'>
            gallery.list.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0'>
                    <div class='showhide-hidden' data-showhide-container='gallery-list-code'>
                    
    <pre class='language-markup'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('gallery.list', &lcub;
        'colSize':'col-1-4',
        'blockSize': 'm',      &lt;!--Controls content padding eg xxxs, xxs, xs, s ..--&gt;
        'data':galleryData
    &rcub;) &rcub;&rcub;
    </code>
    </pre>
                    </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='grid gallery '>
            
                <!-- loop over gallery items -->  
                {% for item, galleryItem in data.galleryData %}
                    {{ macros.flego('gallery.list', {
                        'colSize':'col-1-4',
                        'blockSize': 'm',
                        'galleryData':galleryItem
                    }) }}
                {% endfor %}
                        
                </div><!--grid item ends-->
            </div>
        </div><!-- grid ends -->





    {#******************************************************** 
                           Content blocks
    ********************************************************#}
        
        <h3 class='lego--heading split on-hover' data-showhide-trigger='content-block-code'>
            content.block.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0'>
                    <div class='showhide-hidden' data-showhide-container='content-block-code'>
    <pre class='language-markup'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('media', {
        'gridContainer': true,
        'colSize':'col-3-4',
        'themeClass':'warning',
        'blockSize': 'm',       &lt;!--Controls content padding eg xxxs, xxs, xs, s ..--&gt;
        'content': data.contentblock
        }) 
    &rcub;&rcub;
    </code>
    </pre>
                    </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='block-m block--stacked '>
                    {{ macros.flego('content.block', { 
                        'colSize':'col-3-4 col--q-small',
                        'themeClass':'warning',
                        'blockSize': 'm',
                        'content': data.contentblock
                    }) }}
                </div>
            </div><!--grid item ends-->
        </div><!-- grid ends -->





    {#******************************************************** 
                           Gallery showcase
    ********************************************************#}


        <h3 class='lego--heading split on-hover' data-showhide-trigger='gallery-showcase-code'>
            gallery.showcase.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0'>
                
                    <div class='showhide-hidden' data-showhide-container='gallery-showcase-code'>
    <pre class='language-markup'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('gallery.list', &lcub;
    'galleryShowcaseData':data.galleryShowcase, 
        'isStacked': '', 
        'blockSize': 'm',        &lt;!--Controls content padding eg xxxs, xxs, xs, s ..--&gt;
        'theme': 'quaternary',   &lt;!-- Apply a theme class --&gt;
        'gridContainer': 'grid-container'
    &rcub;) &rcub;&rcub;
    </code>
    </pre>
                </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='grid gallery '>
                    {{ macros.flego('gallery.showcase', { 
                        'galleryShowcaseData':data.galleryShowcase,
                        'category': 'television',
                        'date': '4th of june 2010',
                        'url': '/clickme',
                        'categoryUrl': 'TV/clickme',
                        'imageSource': 'assets/images/gallery-showcase.jpg',  
                        'isStacked': '', 
                        'blockSize': 'm',
                        'theme': 'quaternary',
                        'colSizeLeft':'col-1-3 col--q-small col--q-medium',
                        'colSizeRight':'col-2-3 col--q-small col--q-medium'
                       
                    }) }}    
                </div><!--grid item ends-->
            </div>
        </div><!-- grid ends -->




    {#******************************************************** 
                           Header
    ********************************************************#}
        

        <h3 class='lego--heading split on-hover' data-showhide-trigger='header-code'>
            header.twig
            <span class='split__right'>
                show me some code &#9660;
            </span>
        </h3>
        <div class='grid'>
            <div class='grid__item col'>
                <div class='block-m block--stacked pt-0 pb-0 pb-0'>
                    <div class='showhide-hidden' data-showhide-container='header-code'>
    <pre class='language-markup showhide-active'>
    <code class='language-markup'>
    &lcub;&lcub; macros.flego('media', {
        'gridContainer': true,
        'colSize':'col-3-4',
        'themeClass':'warning',
        'blockSize': 'm',
        'content': data.contentblock
        }) 
    &rcub;&rcub;
    </code>
    </pre>
                    </div>
                </div><!--block ends-->
            </div><!-- grid item ends-->
            <div class='grid__item col col--q-small'>
                <div class='block-m block--stacked '>
                    {{ macros.lego('header', {
                        'navigation': navigation, 
                        'isStacked':'',
                        'blockSize': 'm'
                    }) }}
                </div>
            </div><!--grid item ends-->
        </div><!-- grid ends -->
    </div>
</div>
{% endblock %}